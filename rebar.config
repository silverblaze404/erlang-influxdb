{project_plugins, [rebar3_hex, rebar3_ex_doc, rebar3_format, erlfmt]}.

{erl_opts, [debug_info]}.

{deps, [jsone, hackney]}.

{xref_checks, [undefined_function_calls]}.

{pre_hooks, [
    {ct, "bash ./shell_scripts/pre_ct.sh"}
]}.
{post_hooks, [
    {ct, "bash ./shell_scripts/post_ct.sh"}
]}.

{format, [
    {files, [
        "src/*.{erl,hrl,app.src}",
        "rebar.config"
    ]},
    {formatter, erlfmt_formatter}
]}.
